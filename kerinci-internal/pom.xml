<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.szclsb.kerinci</groupId>
        <artifactId>kerinci-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>kerinci-internal</artifactId>

    <properties>
        <vulkanSdk>C:/VulkanSDK/1.3.239.0</vulkanSdk>
        <dllBuildDir>target-native</dllBuildDir>
        <vkSource>${project.build.directory}/generated-sources/vulkan</vkSource>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>ch.szclsb.maven-plugins</groupId>
                <artifactId>cmake-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>cmake</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <workingDirectory>${project.basedir}</workingDirectory>
                    <nativePath>src/main/c</nativePath>
                    <nativeBuildPath>${dllBuildDir}</nativeBuildPath>
                </configuration>
            </plugin>
            <plugin>
                <groupId>ch.szclsb.maven-plugins</groupId>
                <artifactId>jextract-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>jextract</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <commandFileExtension>.bat</commandFileExtension>
                    <workingDirectory>${project.basedir}</workingDirectory>
                    <includeDir>${vulkanSdk}/Include</includeDir>
                    <header>${vulkanSdk}/Include/vulkan/vulkan.h</header>
                    <library>${project.basedir}/${dllBuildDir}/Debug/Kerinci.dll</library>
                    <target>${vkSource}</target>
                    <targetPackage>ch.szclsb.kerinci.vulkan</targetPackage>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${vkSource}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
