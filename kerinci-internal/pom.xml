            <plugin>
                <groupId>ch.szclsb.kerinci</groupId>
                <artifactId>native-lib-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>native-lib</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <windows>true</windows>
                    <workingDirectory>${project.basedir}</workingDirectory>
                    <nativeBuildPath>${dllBuildDir}</nativeBuildPath>
                    <target>${nativeLibSource}</target>
                    <libs>
                        <lib>
                            <name>Vulkan</name>
                            <nativePath>src/main/c</nativePath>
                            <includeDir>${vulkanSdk}/Include</includeDir>
                            <header>${vulkanSdk}/Include/vulkan/vulkan.h</header>
                            <targetPackage>ch.szclsb.kerinci.vulkan</targetPackage>
                            <library>${dllBuildDir}/Vulkan/Debug/Kerinci.dll</library>
                        </lib>
                    </libs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${nativeLibSource}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
